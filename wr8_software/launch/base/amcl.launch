<?xml version="1.0"?>
<launch>

  <arg name="base_frame"/>
  <arg name="odom_frame"/>
  <arg name="global_frame"/>
  <arg name="scan_topic"/>
  <arg name="x"/>
  <arg name="y"/>
  <arg name="yaw"/>

  <node pkg="amcl" type="amcl" name="amcl" output="screen">

    <param name="odom_frame_id" value="$(arg odom_frame)"/>
    <param name="base_frame_id" value="$(arg base_frame)"/>
    <param name="global_frame_id" value="$(arg global_frame)"/>

    <param name="initial_pose_x" value="$(arg x)"/>
    <param name="initial_pose_y" value="$(arg y)"/>
    <param name="initial_pose_a" value="$(arg yaw)"/>

    <rosparam file="$(find wr8_software)/config/amcl_params/amcl_params_origin.yaml" command="load"/>

    <remap from="scan" to="$(arg scan_topic)"/>

  </node>

</launch>